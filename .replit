entrypoint = "server.js"
modules = ["nodejs-20", "web"]

[nix]
channel = "stable-24_11"

[deployment]
run = ["sh", "-c", "node server.js"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Run HR Dashboard"

[[workflows.workflow]]
name = "Run HR Dashboard"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
